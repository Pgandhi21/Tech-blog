<div class="container" >
    <article class="row">
        <h5 class="center-align">Edit Post</h5>
            <div>
                <form id="edit-post-form" class="col s12">
                    <div class="col s12">
                        Post Id:
                        <div class="input-field col s12">
                            <input disabled value= "{{postData.id}}" id="disabled" name= "post-id" type= "text" class= "form-input">
                            <label for= "disabled" class= "form-label"></label>
                        </div>
                    </div>
                    <div class="col s12">
                        Title:
                        <div class="input-field col s12">
                            <textarea id= "post-title" type= "text" class= "form-input materialize-textarea">{{postData.title}}</textarea>
                            <label for= "post-title" class= "form-label"></label>
                        </div>
                    </div>
                    <div class="col s12">
                        Content:
                        <div class="input-field col s12">
                            <textarea id= "post-body" type= "text" class= "form-input materialize-textarea">{{postData.body}}</textarea>
                            <label for= "post-body" class= "form-label"></label>
                        </div>
                    </div>
                    <div class= "center-align">
                        <button type="submit" class="btn waves-effect waves-light btn-small">Update</button>
                        <button type="button" id="deleteBtn" class="waves-effect waves-light btn btn-small">Delete</button>
                    </div>
                    
                </form>
            </div>
    </article>
</div>

<script src="/js/editPost.js"></script>