<div class="card col-md-8 mx-auto" >
    <article class= "card-body" id = "postsCard">
        <h4 class="card-title center-align">Sign Up</h4>
            <div class="card-text text-wrap">
                <form id="signup-form" class= "col-md-8 mx-auto card-text text-wrap">
                    <div class="row center-align">
                        Username:
                        <div class="input-field inline">
                            <input id= "username-signup" type= "text" class= "form-input">
                            <label for= "username-signup" class= "form-label"></label>
                        </div>
                    </div>
                    <div class="row center-align">
                        Password:
                        <div class="input-field inline">
                            <input id= "password-signup" type= "text" class= "form-input">
                            <label for= "password-signup" class= "form-label"></label>
                        </div>
                    </div>
                    <div class= "center-align">
                        <button type="submit" class="signup-btn btn waves-effect waves-light btn-large center-align">Sign Up</button>
                    </div>
                </form>
            </div>
    </article>
</div>


